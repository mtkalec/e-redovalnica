  <body>

    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class = "modal-title">e-Redovalnica</h3>
        </div>
        <div class="modal-body">
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <form class="form-login" method="post" action="/login">
              <input type="text" name="username" id="inputUsername" class="form-control" placeholder="UporabniÅ¡ko ime" autofocus>
              <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Geslo">
              <br>
              <input type="submit" value="Prijava" class="btn btn-primary center-block">
            </form>

        </div>
        <div class="modal-footer">
          <a href="/signup"><p><sup>Registracija</sup></p></a>
        </div>
      </div>
    </div>
  </body>
</html>
